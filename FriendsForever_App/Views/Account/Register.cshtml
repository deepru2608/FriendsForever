@inject IOptions<RecaptchaSettings> RecaptchaSettings
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Deepanshu Ruhela">

    <title>Friends Forever - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Jquery UI Library -->
    <link href="~/jqueryui/jquery-ui.min.css" rel="stylesheet" asp-append-version="true" />

    <!-- Bootstrap DateTime Picker Library -->
    <link href="~/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" asp-append-version="true" />

    <!-- Custom styles for this template-->
    <link href="~/CustomCss/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">
</head>
<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form method="post" class="user">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="FirstName" class="form-control form-control-user" id="exampleFirstName"
                                               placeholder="First Name" autocomplete="off">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="LastName" class="form-control form-control-user" id="exampleLastName"
                                               placeholder="Last Name" autocomplete="off">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Username" class="form-control form-control-user" id="exampleUsername"
                                               placeholder="Username" autocomplete="off">
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="Email" class="form-control form-control-user" id="exampleEmail"
                                               placeholder="Email Address" autocomplete="off">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="MobileNo" class="form-control form-control-user" id="exampleMobile"
                                               placeholder="Mobile Number" autocomplete="off">
                                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="Dob" type="text" class="form-control form-control-user" id="exampleDob"
                                               placeholder="Date of birth (mm/dd/yyyy)" autocomplete="off">
                                        <span asp-validation-for="Dob" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Gender" class="form-control form-control-user" id="exampleGender"
                                               placeholder="Gender" autocomplete="off">
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Country" class="form-control form-control-user" id="exampleCourtry"
                                               placeholder="Country" autocomplete="off">
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Password" class="form-control form-control-user" id="exampleInputPassword"
                                               placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="ConfirmPassword" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Repeat Password">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.Recaptcha(RecaptchaSettings.Value)
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block" 
                                        asp-action="Register" asp-controller="Account">
                                    Register Account
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="Login" asp-controller="Account">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/jquery-validate/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/CustomJs/jquery.easing.min.js" asp-append-version="true"></script>
    <script src="~/jqueryui/jquery-ui.min.js" asp-append-version="true"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/CustomJs/sb-admin-2.min.js" asp-append-version="true"></script>
    <script src="~/CustomJs/AutoCompleteCustomScript.js" asp-append-version="true"></script>
    <script src="~/CustomJs/Register.js" asp-append-version="true"></script>

    <!-- Bootstrap DateTime Picker Library -->
    <script src="~/bootstrap-datepicker/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
</body>
</html>
